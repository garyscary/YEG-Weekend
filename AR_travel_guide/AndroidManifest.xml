<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ar_travel_guide"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="9"
        android:targetSdkVersion="19" />



    <!-- Permissions -->

    <!-- Allows access to the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Allows the opening of network sockets. -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Allows checking of network properties (e.g. active type: 3G/WiFi) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <!-- Features -->

    <!-- glEsVersion - The OpenGL version required from this application. -->
    <uses-feature android:glEsVersion="0x00020000" />

    <!-- If the camera feature isn't included, phones that do not have flash or
         auto-focus will not be able to run the app (features we don't use) -->
    <uses-feature android:name="android.hardware.camera" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:launchMode="singleTask"
        android:allowBackup="true" >

        <!-- Splash Screen -->

        <activity
            android:name=".ui.SplashScreen"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Controls the camera functionality that scans images for AR -->

        <activity
            android:name=".ui.CameraActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>

        <!--  -->

        <activity
            android:name=".app.VideoPlayback.VideoPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:theme="@style/SampleAppsTheme"
              android:launchMode="singleTask"
          />
        

        <!-- This is the activity that holds the full screen media player -->
        <activity android:label="@string/app_name"
            android:name=".app.VideoPlayback.FullscreenPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:exported="false">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

        </activity>

    </application>

</manifest>
